{
  "name": "@oakfinch/ts-utils",
  "version": "1.0.21",
  "description": "Utility library with enhanced TypeScript support",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "rm -rf dist; tsc --build tsconfig.json tsconfig.esm.json --excludeFiles *.test.ts",
    "build:docs": "typedoc",
    "lint": "eslint --ext js,cjs,mjs,ts,jsx,tsx,json .",
    "lint:fix": "eslint --ext js,cjs,mjs,ts,jsx,tsx,json --fix .",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "commit-msg": "commitlint -e",
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run lint && npm run typecheck && npm run test && npm run build:docs && git add ./docs/* &&  (git commit --amend --no-edit || true)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oakfinch/ts-utils.git"
  },
  "keywords": [
    "TypeScript"
  ],
  "author": "Nate Volker <natevolker@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oakfinch/ts-utils/issues"
  },
  "homepage": "https://github.com/oakfinch/ts-utils#readme",
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@oakfinch/commitlint-config": "^1.0.0",
    "@oakfinch/eslint-config": "^1.1.10",
    "@oakfinch/jest-config": "^1.0.2",
    "@oakfinch/lint-staged-config": "^1.0.0",
    "@oakfinch/prettier-config": "^1.0.4",
    "@oakfinch/ts-extra": "^1.0.17",
    "@oakfinch/tsconfig": "^1.0.11",
    "@types/jest": "^27.0.2",
    "eslint": "^7.32.0",
    "husky": "^7.0.4",
    "jest": "^27.2.4",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "typedoc": "^0.22.4",
    "typescript": "^4.4.3"
  },
  "dependencies": {}
}
